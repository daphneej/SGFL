// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String   @unique
  password       String
  role           Role     @default(USER)
  courses        Course[] @relation("StudentCourses")
  createdCourses Course[] @relation("TrainerCourses")
}

model Course {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  price       Float
  trainer     User   @relation("TrainerCourses", fields: [trainerId], references: [id])
  trainerId   Int
  students    User[] @relation("StudentCourses")
}

enum Role {
  USER
  STUDENT
  TRAINER
  ADMIN
}
